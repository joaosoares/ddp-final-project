// Calculates res = (message^exponent) mod N
void mod_exp(uint32_t *msg, uint32_t exp, uint32_t exp_len, uint32_t *res)
{
	int i;
	int bit;

	uint32_t x_tilde[len], A[len];

	montgomery_multiply(msg, R2_1024, n, n0, x_tilde, SIZE);

	for(i = 0; i < len; i++)
	{
		A[i] = R1024[i];
	}

	for(i = exponent_len-1; i>=0; i--)
	{
		bit = (exponent >> i) & 1;

		printf("Bit[%d] of exponent is: %d\n", i, bit);

		montgomery_multiply(A, A, n, n0, A, SIZE);

		if(bit)
		{
			montgomery_multiply(A, x_tilde, n, n0, A, SIZE);
		}

	}
}

